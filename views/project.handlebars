  <div class="columns m-0"> 
    <div class="column is-3 p-6 has-text-white"  style="margin-top: 60px;">
      <p class="title has-text-white">
        Hello, {{userData.name}}.
      </p>
      <h2 class="subtitle has-text-white">
        I hope you are having a great day!
      </h2>
      <p class="title has-text-white mb-6" style="margin-top:50px;">
        You Have:
      </p>
      <ul class="menu-list" >
        <li class="subtitle m-1 mb-5 has-text-white"><span class=" has-text-weight-bold mr-5">{{userData.projectNo}} </span> Active Projects</li>
        <li class="subtitle m-1 mb-5 has-text-white"><span class=" has-text-weight-bold mr-5">{{userData.taskNo}} </span> Active Tasks</li>
        {{!-- <li class="subtitle m-1 mb-5 has-text-white"><span class=" has-text-weight-bold mr-5" >3 </span> Active Flags</li> --}}
      </ul>
      <div>
        <button id="addNewProjectBtn" style="margin-top:50px;" class="button  transparentItem is-block ">Add New Project</button>
        {{!-- <button id="addNewTaskBtn" style="margin-top:20px; width: 100%" class="button transparentItem is-block">Search Project</button> --}}
      </div>
    </div>
    <div class="column auto"  style="margin-top: 60px;">
      {{#each projects as |project|}}
      {{> project-cards}}
      {{/each}}
    </div>
    <section>
      <div id="projectModal" class="modal">
        <div class="modal-background" style="background-color: white; opacity: 0.8"></div>
        <div class="modal-card">
          <header class="modal-card-head gradient">
            <p class="modal-card-title">Add New Project</p>
          </header>
          <section class="modal-card-body">
            <p class="m-2 is-size-5">Project Name</p>
            <input id="newProjectName" class="input is-rounded" type="text" placeholder="Project Name">
            <p class="m-2 is-size-5">Project Due Date</p>
            <input id="newProjectDue" class="input is-rounded" type="text" placeholder="MM/DD/YYYY">
            <p class="m-2 is-size-5">Project Manager</p>
            <div  class="select">
              <select id="newProjectMgr">
                <option>Select Manager</option>
                {{#each managers}}
                <option>{{this.name}}</option>
                {{/each}}
              </select>
            </div>
          </section>
          <footer class="modal-card-foot gradient">
            <button id="confirmAddProject" class="button">Add New Project</button>
            <button id="cancelAddProject" class="button">Cancel</button>
          </footer>
        </div>
      </div>
    </section>
</section>
